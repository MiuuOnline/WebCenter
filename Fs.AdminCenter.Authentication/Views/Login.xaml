<UserControl x:Class="Fs.AdminCenter.Authentication.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="300">
            <Border BorderThickness="2" BorderBrush="White" CornerRadius="10">
                <Grid>
            <StackPanel>
                <TextBlock Text="Login" Style="{DynamicResource H1}" />
            </StackPanel>
            <StackPanel Width="300"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Username" />
                <TextBox Text="{Binding Username, Mode=TwoWay}" Margin="5" />
                <TextBlock Text="Password" />
                <TextBox Text="{Binding Password, Mode=TwoWay}" Margin="5" />
            </StackPanel>
            <Button Content="Login" Command="{Binding Login}" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" />
                </Grid>
</Border>
        </Grid>
            
    </Grid>
</UserControl>
